<h1>Batch #884 Funny Restaurants</h1>

<ul>
<% @restaurants.each do |restaurant| %>
  <li>
    <a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a>
  </li>
<% end %>
</ul>

<%# form action is the path
    to the FIRST route that
    match the request 'verb + path' %>
<%# In this case
    post + /restaurants %>
<%# The input name attribute will be used
    as key in the params hash %>
<form action="/restaurants" method="post">
  <label for="name">Name</label>
  <input type="text" name="name" id="name">
  <label for="cuisine">Cuisine</label>
  <input type="text" name="cuisine" id="cuisine">
  <label for="address">Address</label>
  <input type="text" name="address" id="address">
  <input type="submit" value="Create restaurant">
</form>
